<% @users.each do |user| %>
  <div class= "d-flex">
    <div class= "users-pic">
      <%= image_tag display_photo(user), class: "user-pic" %>
    </div>
    <div class= "user-links">
      <%= link_to users_show_path(user.id) do %>
        <strong><%= user.fullname %></strong> | 
        <small>@<%= user.username %></small><br>
        <%= user.email %><br><br>
      <% end %>
    </div>
    <div class= "follow-btn">
      <%= <%= displayfollow(_user, user) %>%> 
    </div>
  </div>
<% end %>