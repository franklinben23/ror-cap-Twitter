<% if user_signed_in? %>
  <h3>Who to Follow</h3><br>

  <% User.all.order(created_at: :desc).each do |user| %>
    <% if current_user != user && !current_user.followees.include?(user) %>
    <div class="d-flex align-items-baseline">
      <div>
        <%= link_to show_user_path(user.id) do %>
        <image class="tweet-pic"<%= image_tag display_photo(user) %>
      </div>
      <div class="px-2">
        <%= user.fullname %><br/>
        <small>@<%= user.username %></small><br/><br>
      <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
<% end %>