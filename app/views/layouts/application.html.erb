<!DOCTYPE html>
<html>
  <head>
    <title>RorCapTwitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <STYLE>A {text-decoration: none;} </STYLE>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <% if user_signed_in? %>
    <div class= "sidebar-nav blueback">
      <div class="name-pic d-flex">
        <img src="default-phota.png" alt="Girl in a jacket" class = "sidebar-img">
        <div class= "user-name"> Name </div>
      </div>

      <div class ="follow-counts d-flex">
        <div class= "following">
          <p> 11,000 </p>
        </div>
        <div class= "followers">
          <p> 11,000 </p>
        </div>
      </div>

      <div class= "sidebar-listings">
        <ul class= "sidebar-list">
          <li class= "sidebar-list-item">
            <%= link_to "Connect" users_path %>
          </li>
          <li class= "sidebar-list-item">
          </li>
          <li class= "sidebar-list-item">
          </li>
          <li class= "sidebar-list-item">
            <%= link_to "Profile" show_user_path(current_user) %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>

    <div class= "main-sec w-100">
      <div class = "navbar d-flex">
        <div class = "navbar-logo">
          <%= link_to root_path do %>
            <i class="fa fa-twitter fa-2x element d-block" aria-hidden="true"></i>
          <% end %>
        </div>
        <div class = "navbar-elements d-flex">
          <%= link_to new_tweet_path do %>
            <i class="fa fa-pencil element d-block" aria-hidden="true"></i>
          <% end %>
          <%= link_to destroy_user_session_path do %>
            <i class="fa fa-sign-out element d-block" aria-hidden="true"></i>
          <% end %>
          <%= link_to edit_user_registration_path do %>
            <i class="fa fa-address-book element d-block" aria-hidden="true"></i>
          <% end %>
        </div>
      </div>

      <div class = "content-main">
        <%= yield %>
      </div>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js" integrity="sha384-W8fXfP3gkOKtndU4JGtKDvXbO53Wy8SZCQHczT5FMiiqmQfUpWbYdTil/SxwZgAN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js" integrity="sha384-skAcpIdS7UcVUC05LJ9Dxay8AXcDYfBJqt1CJ85S/CFujBsIzCIv+l9liuYLaMQ/" crossorigin="anonymous"></script>

  </body>
</html>
